<?xml version="1.0" encoding="UTF-8"?>
<Window size="1300,900" min_size="1300,900"
        caption="0,0,0,80" use_system_caption="false" snap_layout_menu="true" sys_menu="true" sys_menu_rect="0,0,36,36"
        shadow_type="default" shadow_attached="true" shadow_snap="true" layered_window="true"
        alpha="255" size_box="4,4,4,4" icon="public/caption/logo.ico"

   		xmlns:xs="http://www.w3.org/2001/XMLSchema"
		xmlns="http://tempuri.org/NIMDUISchema.xsd"
		>
	<VBox bkcolor="bk_wnd_darkcolor" visible="true">
		<!-- 标题栏区域 -->
		<HBox name="window_caption_bar" width="stretch" height="36">
			<Control />
			<Button class="btn_wnd_min_11" height="32" width="40" name="minbtn" margin="0,2,0,2" tooltip_text="最小化"/>
			<Box height="stretch" width="40" margin="0,2,0,2">
				<Button class="btn_wnd_max_11" height="32" width="stretch" name="maxbtn" tooltip_text="最大化"/>
				<Button class="btn_wnd_restore_11" height="32" width="stretch" name="restorebtn" visible="false" tooltip_text="还原"/>
			</Box>
			<Button class="btn_wnd_close_11" height="stretch" width="40" name="closebtn" margin="0,0,0,2" tooltip_text="关闭"/>
		</HBox>

		<!-- 工作区域，除了标题栏外的内容都放在这个大的Box区域 -->
		<HBox>
			<!-- 基础面板左侧，场景设置区域与基本控制区 有固定宽度 -->
			<VBox width="290" >
				<!-- 场景设置区域VBOX -->
				<VBox margin="20,20,20,10" bkcolor="panelBkColor" border_round="10,10">
					<Button text="未命名场景" fade_hot="true" hot_color="itemHoverColor" height="30" width="stretch" text_padding="20,0,0,0" text_align="left,vcenter"/>
			<Label name="tooltip" text="场景设置区" height="100%" width="100%" text_align="hcenter,vcenter"/>
		
				</VBox>
				<!-- 基础控制区VBOX 有固定高度-->
				<VTileBox margin="20,10,20,20"  height="220" bkcolor="panelBkColor" border_round="10,10" item_size="80,80">
					<ButtonBox name="baseControl_btn_settings" hot_color="itemHoverColor" mouse_child="false">
						<VBox >
							<Control bkimage="baseControl_settings.svg" width="auto" height="auto"/>
							<Label text_id="STRID_BASECONTROL_SETTINGS"  normal_text_color="textNormalColor"/>
						</VBox>
					</ButtonBox>
				</VTileBox>
			</VBox>
			
			<!-- 工作区容器-->
			<!-- 点场景中的物品时工作区显示对应的设置项-->
			<Box name="box_workSpaceContainer" margin="0,20,20,20" border_round="10,10" bkcolor="panelBkColor" />
		</HBox>
	</VBox>
</Window>